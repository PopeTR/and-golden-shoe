<div class="shoes-container">
    <div class="filters-container">
    </div>
    <div class="shoecards-container">
    <%# Shoe Card %>
    
    <% @male_products.each do |product| %> 
        <%= link_to product_path(product.id), :action => 'go' do %>
            <div class="shoecard">
                
                <% if product.images.attached? %> 
                    <div class="shoecard-image" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= url_for(product.images[0]) %>)'>
                        <img src= <%= url_for(product.images[0]) %> alt="main_image">
                    </div>
                <% end %> 
                <div class="shoecard-title">
                    <p class="shoecard-name"><%= product.name %></p>
                </div>
            </div>
        <% end %> 
    <% end %>
    </div>
</div>
